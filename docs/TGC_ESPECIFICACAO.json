        "name": "Metallic Shine Detector",
        "precision": 99.7,
        "processing_time_ms": 5,
        "metrics": {
          "SBI": {"gold": ">0.85", "pyrite": "<0.70"},
          "LCR": "uniformity_measure",
          "MI": {"gold": ">0.85", "pyrite": "<0.70"}
        }
      },
      {
        "name": "Specular Reflection Analyzer",
        "precision": 99.4,
        "processing_time_ms": 8,
        "features": ["highlight_detection", "highlight_count", "distribution_pattern"]
      },
      {
        "name": "Anisotropy Engine",
        "precision": 99.5,
        "processing_time_ms": 12,
        "method": "Gabor filters 8 directions",
        "threshold": {"gold": "<0.15", "pyrite": ">0.20"}
      },
      {
        "name": "Fresnel Reflection Engine",
        "precision": 99.8,
        "processing_time_ms": 10,
        "description": "INOVAÇÃO MUNDIAL - Cálculo baseado em propriedades ópticas reais",
        "gold": {"n": 0.27, "k": 2.95, "reflectance": 95},
        "pyrite": {"n": 1.45, "k": 0.10, "reflectance": 54},
        "discrimination": 41
      },
      {
        "name": "Subsurface Scattering Detector",
        "precision": 99.6,
        "processing_time_ms": 8,
        "gold_sss": 0.0,
        "pyrite_sss": 0.05
      }
    ],
    "anti_confusion": [
      {
        "name": "Gold vs Pyrite Discriminator",
        "precision": 99.9,
        "processing_time_ms": 20,
        "criteria_count": 12,
        "description": "Sistema especializado de 12 critérios independentes"
      },
      {
        "name": "Exclusion Proof Analyzer",
        "precision": 99.8,
        "processing_time_ms": 25,
        "exclusion_rules": [
          "cubic_striations => NOT gold",
          "magnetic => NOT gold",
          "sss > 0.1 => NOT metal",
          "hardness > 4 => NOT pure gold"
        ]
      },
      {
        "name": "Zero-Tolerance Confidence Engine",
        "precision": 99.95,
        "processing_time_ms": 5,
        "confidence_levels": {
          "absolute": {"range": [99, 100], "criteria": "12/12"},
          "high": {"range": [95, 99], "criteria": "10-11/12"},
          "medium": {"range": [85, 95], "criteria": "8-9/12"},
          "low": {"range": [0, 85], "criteria": "<8/12", "action": "manual_review"}
        }
      }
    ],
    "texture_morphology": [
      {
        "name": "Gabor Texture Analyzer",
        "precision": 99.4,
        "processing_time_ms": 15,
        "parameters": {
          "scales": 5,
          "orientations": 8,
          "phases": [0, 90]
        }
      },
      {
        "name": "Crystal Structure Detector",
        "precision": 99.2,
        "processing_time_ms": 20,
        "crystal_systems": ["cubic", "hexagonal", "tetragonal", "orthorhombic", "monoclinic", "triclinic"]
      },
      {
        "name": "Morphology Classifier",
        "precision": 99.4,
        "processing_time_ms": 10,
        "features": ["circularity", "aspect_ratio", "convexity", "solidity", "euler_number"]
      }
    ],
    "geological_context": [
      {
        "name": "Geological Context Engine",
        "precision": 99.3,
        "processing_time_ms": 5,
        "associations": {
          "gold": ["quartz", "oxidized_pyrite", "arsenopyrite"],
          "pyrite": ["quartz", "calcite"],
          "pgms": ["chromite", "olivine", "serpentine"]
